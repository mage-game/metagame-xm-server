	<special_monster>
		<monster_id>46001</monster_id>
		<logic_item>	最多1个logic_item
			<special_logic_type>1</special_logic_type>
			<param1>46002</param1>
			<param2>10000</param2>
			<param3>0</param3>
			<param4>0</param4>
		</logic_item>
	</special_monster>
 -->
